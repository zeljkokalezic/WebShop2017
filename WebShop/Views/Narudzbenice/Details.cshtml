@model WebShop.Models.Narudzbenica

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Narudzbenica za @Model.User.Email</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

    <p>
        @if (Model.Status == WebShop.Models.StatusNarudzbenice.Otvorena)
        {
            @Html.ActionLink("Poruci", "Order", new { id = Model.Id }, new { @class = "btn btn-default" })
        }  
    </p>
    

    <table class="table">
        <tr>
            <th>Artikal</th>
            <th>Kolicina</th>
            <th>Cena Artikla</th>
            <th>Ukupno</th>
        </tr>

        @foreach (var item in Model.Stavke)
        {
            <tr>
                <td>
                    @item.Artikal.Ime
                </td>
                <td>
                    @item.Kolicina
                </td>
                <td>
                    @item.Cena
                </td>
                <td>
                    @(item.Cena * item.Kolicina)
                </td>
            </tr>
        }
        <tr style="font-weight:bold">
            <td colspan="3" style="text-align:right">
                Total:
            </td>
            <td>
                @Model.Total()
            </td>
        </tr>
        </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
